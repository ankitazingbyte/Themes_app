<div class= "container">  
  <div style="text-align:left ">
    <font color="grey">
    <h2>LOG IN</h2>
    <%= form_for :user,  url: session_path(:user) do |f| %>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <div class="actions">
        <%= f.submit "LOG IN", class: "btn2 btn-primary"  %>
      </div>
    <% end %>
  </font>
  </div>
</div>